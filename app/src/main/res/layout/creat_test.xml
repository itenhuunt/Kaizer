<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".creatTest.creatTest">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/testname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/testnamever2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="название теста" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/Question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="вопрос"
        android:inputType="text"
        android:maxLines="1"
        android:text="" />


    <EditText
        android:id="@+id/oA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="вариант ответа 1"
        android:inputType="text"
        android:maxLines="1"
        android:text="" />

    <EditText
        android:id="@+id/oB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="вариант ответа 2"
        android:inputType="text"
        android:maxLines="1"
        android:text="" />

    <EditText
        android:id="@+id/oC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="вариант ответа 3"
        android:inputType="text"
        android:maxLines="1"
        android:text="" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerNewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="register" />


</LinearLayout>

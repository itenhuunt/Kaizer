<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/vibostyle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/iconvibo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="Kaizer"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/message2" />

            <ImageView
                android:id="@+id/seach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/seach" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button
                    android:id="@+id/startQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="startBelka" />

                <Button
                    android:id="@+id/creatQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="creat_belka" />

                <Button
                    android:id="@+id/answer_belka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="answer_belka" />


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</RelativeLayout>